<% content_for :title, 'Investments' %>

<div class='container'>
  <div class='row'>
    <div class='col-md-12'>
      <div class="page-header">
        <h2>
          Your Investments
        </h2>
      </div>

      <div class='table-responsive'>
        <table class='table table-striped events'>
          <tr>
            <th><%= sortable_column 'amount', name: 'Amount' %></th>
            <th>Current Value</th>
            <th>Percentage Change</th>
            <th><%= sortable_column 'account', name: 'Account' %></th>
            <th><%= sortable_column 'financial_year', name: 'Financial Year' %></th>
            <th><%= sortable_column 'investment_type', name: 'Type' %></th>
            <th>Tax Saving</th>
            <th><%= sortable_column 'purchased_on', name: 'Date' %></th>
            <th><%= sortable_column 'units', name: 'Units' %></th>
            <th><%= sortable_column 'current_nav', name: 'Current Nav' %></th>
            <th><%= sortable_column 'app', name: 'App' %></th>
          </tr>
        <% @investments.each do |investment| %>
          <tr id="<%= investment.id %>">
            <td><%= number_to_currency(investment.amount, unit: "Rs", format: "%n %u") %></td>
            <td><%= number_to_currency(investment.current_value, precision: 2, unit: "Rs", format: "%n %u") %></td>
            <td><%= investment.percentage_change.round(2) %></td>
            <td><%= investment.account %></td>
            <td><%= investment.financial_year %></td>
            <td><%= investment.investment_type %></td>
            <td><%= investment.tax_saving %></td>
            <td><%= investment.purchased_on %></td>
            <td><%= investment.units %></td>
            <td><%= investment.current_nav.to_f %></td>
            <td><%= investment.app %></td>
        <% end %>
        </table>
      </div>

      <br />
    </div>
  </div>
</div>

